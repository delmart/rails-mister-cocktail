
<div class="banner" style="background-image: linear-gradient(0deg, rgba(0,101,168,0.6) 0%, rgba(0, 0, 0, 0.27) 50%), url(<%= asset_path('background.jpg')%>);">
  <div class="banner-content text-center">
    <h1>Best cocktails</h1>
    <p>Ready to get drunk bitches</p>
  </div>
</div>

<div class="wrapper-white text-center">
  <%= link_to "Ajouter un cocktail", new_cocktail_path, {class: "btn btn-primary padding slideRight"} %>
</div>
<div class="wrapper">
  <div class="container">
    <div class="row text-center">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4 col-lg-3">
        <div class="card text-center">
          <%= link_to cocktail_path(cocktail) do %>
          <%= image_tag cocktail.photo, height: 180, width: 250, :class => "fadeIn"%>
          <% end %>
          <p><%= cocktail.name %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>









