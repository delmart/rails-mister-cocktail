
<div class="container text-center">
<!--  <div class="row">
   <div class="col-sm-8"> -->
  <h2><%= @cocktail.name %></h2>

  <h3>Ingredients</h3>
    <% @cocktail.doses.each do |dose| %>
      <ul class="list-inline">
        <li><p><%= ' -> ' + dose.description + ' de ' + dose.ingredient.name %></p></li>
        <li><%= link_to edit_cocktail_dose_path(@cocktail,dose) do %>
        <%= icon('pencil') %>
        <% end %></li>
        <li> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <%= icon('trash') %>
        <% end %></li>
      </ul>
    <% end %>

    <br>

     <%= link_to cocktail_path(@cocktail),method: :delete,
     data: { confirm: "Are you sure?" } do %>
      <button type="button" class="btn btn-danger">Supprimer</button>
     <% end %>

     <%= link_to new_cocktail_dose_path(@cocktail) do %>
      <button type="button" class="btn btn-info">Ajouter dose</button>
     <% end %>

     <%= link_to cocktails_path do %>
      <button type="button" class="btn btn-primary">retour</button>
     <% end %>
 <!--   </div>
 </div> -->
</div>






